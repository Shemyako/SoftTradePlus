<Window x:Class="SoftTradePlus.View.ConfirmWindow"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
        xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
        xmlns:local="clr-namespace:SoftTradePlus.View"
        mc:Ignorable="d"
        Title="Подтвердить?" Height="75" Width="144"
        WindowStartupLocation="CenterScreen">
    <Grid>
        <Grid.ColumnDefinitions>
            <ColumnDefinition></ColumnDefinition>
            <ColumnDefinition></ColumnDefinition>
        </Grid.ColumnDefinitions>
        
        <Button Grid.Column="0" HorizontalAlignment="Center" VerticalAlignment="Center" Content="Да" BorderThickness="0" Foreground="YellowGreen" Width="50" Background="Green" Click="Button_Click"/>
        <Button Grid.Column="1" HorizontalAlignment="Center" VerticalAlignment="Center" Content="Нет" BorderThickness="0" Foreground="DarkRed" Background="Red" Width="50" Click="Button_Click_1"/>

    </Grid>
</Window>
