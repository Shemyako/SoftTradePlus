<Window x:Class="SoftTradePlus.ProductWindow"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
        xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
        xmlns:local="clr-namespace:SoftTradePlus"
        mc:Ignorable="d"
        Title="Окно продукта" Height="184" Width="200"
        WindowStartupLocation="CenterScreen">
    <Grid>
        <TextBox x:Name="NameBox" HorizontalAlignment="Center" Margin="0,25,0,0" TextWrapping="Wrap" Text="{Binding Name}" VerticalAlignment="Top" Width="160"/>
        <TextBox x:Name="PriceBox" HorizontalAlignment="Center" Margin="0,55,0,0" TextWrapping="Wrap" Text="{Binding Price}" VerticalAlignment="Top" Width="160"/>
        <DatePicker x:Name="DatePicker" IsEnabled="{Binding Is_sub}" HorizontalAlignment="Left" Margin="10,82,0,0" 
                    VerticalAlignment="Top" SelectedDate="{Binding Sub_end}" Width="140"/>
        <CheckBox IsChecked="{Binding Is_sub}" HorizontalAlignment="Left" Margin="155,91,0,0" VerticalAlignment="Top"/>
        <Button Content="Подтвердить" HorizontalAlignment="Center" Margin="0,123,0,0" VerticalAlignment="Top" Width="120" Click="Button_Click"/>

    </Grid>
</Window>
