<Window x:Class="SoftTradePlus.ManagerWindow"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
        xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
        xmlns:local="clr-namespace:SoftTradePlus"
        mc:Ignorable="d"
        Title="Окно менеджера" Height="197" Width="225"
        x:Name="managerWindow">
    <Grid>
        <TextBox x:Name="userName" HorizontalAlignment="Center" Margin="0,51,0,0" TextWrapping="Wrap" Text="{Binding Name}" VerticalAlignment="Top" Width="206"/>
        <Button Content="Подтвердить" HorizontalAlignment="Center" Margin="0,129,0,0" VerticalAlignment="Top" Click="Button_Click" Width="205"/>

    </Grid>
</Window>
