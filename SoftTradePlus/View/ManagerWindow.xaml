<Window x:Class="SoftTradePlus.ManagerWindow"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
        xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
        xmlns:local="clr-namespace:SoftTradePlus"
        mc:Ignorable="d"
        Title="Окно менеджера" Height="197" Width="225"
        WindowStartupLocation="CenterScreen"
        x:Name="managerWindow">
    <Grid>
        <Grid.RowDefinitions>
            <RowDefinition Height="*"/>
            <RowDefinition Height="*"/>
        </Grid.RowDefinitions>
        
        <TextBox x:Name="userName" Grid.Row="0" HorizontalAlignment="Center"  TextWrapping="Wrap" Text="{Binding Name}" VerticalAlignment="Center" Width="206"/>
        <Button Content="Подтвердить" Grid.Row="1" HorizontalAlignment="Center" VerticalAlignment="Center" Click="Button_Click" Width="205"/>

    </Grid>
</Window>
